@model ToZeptyUI.Models.UpdateOrderStatusModel

<style>
    .custom-label {
        max-width: 26.333333%;
    }
</style>
<div class="row justify-content-center mt-5 border border-dark p-2">
    <div class="col-md-6 ">
        @using (Html.BeginForm("OrderConfirmation", "Customer", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <h4 class="ms-5 mb-3">Track Your Order Status </h4>
            <div class="form-group row">
                @Html.LabelFor(model => model.OrderId, "Enter Order Id:", htmlAttributes: new { @class = "control-label col-md-4 ms-0 custom-label" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.OrderId, new { htmlAttributes = new { @class = "", @required = "required", inputmode = "numeric" } })
                    @Html.ValidationMessageFor(model => model.OrderId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row text-end">
                <div class="offset-md-4 col-md-4">
                    <button type="submit" class="btn btn-outline-warning">Submit</button>
                </div>
            </div>
        }
    </div>
</div>
