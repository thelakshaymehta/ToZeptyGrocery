@{
    var userId = (int?)Session["UserId"];
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -ToZepty</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <style>

        .icon {
            height: 30px;
            width: 30px;
        }

        .sidenav {
            width: 250px;
            height: 100%;
            position: fixed;
            z-index: 1;
            top: 0;
            background-color: #333;
            overflow-x: hidden;
            padding-top: 20px;
            transition: 0.5s;
        }

            .sidenav ul {
                margin-top: 30px;
                list-style-type: none;
                padding: 0;
            }

            .sidenav li {
                text-decoration: none;
                font-size: 18px;
                color: #e9ecef;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: color 0.60s;
            }

                .sidenav li:hover {
                    color: #f1f1f1;
                }

            .sidenav a {
                text-decoration: none;
            }

            .sidenav:hover {
                left: 0;
            }

            .sidenav ul li:active {
                transform: scale(0.95);
            }


            .sidenav ul li.divider {
                border-bottom: 1px solid #555;
            }

        .sidenav-logo {
            text-align: center;
            margin-bottom: 20px;
        }

            .sidenav-logo img {
                Width: 45%;
                max-width: 110px;
                height: auto;
                border-radius: 50%
            }


        .product-link:hover,
        .product-link:hover a {
            background: white;
            cursor: pointer;
            color: black;
        }

        .bold-blue {
            font-weight: bold;
            color: blue;
        }


        .product-link {
            height: 50px;
            display: flex;
            align-items: center;
        }

            .product-link a {
                color: white;
            }

                .product-link a:hover {
                    color: black;
                }

        .main-content {
            margin-left: 250px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Admin")">

                <img src="~/assets/Aadarsh/images/Minimal Grocery Market Logo.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                ToZepty
            </a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>

            </button>

            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Registration", "Registration", "Account", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Log out", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item nav-link disabled text-dark">
                        Welcome, @User.Identity.Name!
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>