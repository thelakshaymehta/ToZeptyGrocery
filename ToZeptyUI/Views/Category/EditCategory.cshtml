@model  ToZeptyUI.Models.CategoryModel

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-3"></div>
    <div class=" col-6">
        <h2 class="ms-5 mb-4">Edit Category</h2>
        @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryId, "Category Id :")
                @Html.TextBoxFor(model => model.CategoryId, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CategoryName)
                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="text-end btn btn-outline-primary">Edit</button>
        }

    </div>
    <div class="col-3"></div>
</div>