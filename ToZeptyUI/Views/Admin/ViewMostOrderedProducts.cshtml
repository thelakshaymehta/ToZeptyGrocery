@model List<ToZeptyUI.Models.OrderDetailsViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Top 5 Most Ordered Products</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            border: 1px solid #dddddd; /* Outline border */
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Stripped design */
        }

        tr:hover {
            background-color: #ddd; /* Hover effect */
        }

        th, td {
            border-bottom: 1px solid #dddddd; /* Outline border */
            border-right: 1px solid #dddddd; /* Outline border */
        }

            th:last-child, td:last-child {
                border-right: none; /* Remove right border for last column */
            }
    </style>
</head>
<body>
    <h2>Top 5 Most Ordered Products</h2>
    <table>
        <tr>
            <th>Sr No.</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        @{
            int serialNumber = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@serialNumber</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                </tr>
                serialNumber++;
            }
        }
    </table>
</body>
</html>
